        <link rel="icon" href="{{ asset('images/abeille.png') }}">
      <!--Lien vers fichier de styles -->
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body >
        <nav class="navbar navbar-expand-lg navbar-dark  static-top" >
            <div class="Page container">

                <a href="{{ url('sortie_accueil') }}" class="navbar-brand" >
                    <img src="{{ asset('images/logo2.png') }}" alt="groupe_6_logo" class="Logo title_Logo" >
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse " id="navbarResponsive">
                    <ul class="navbar-nav ml-auto nav navbar-right">
                        {% block nav %}
                        <li class="nav-item ">
                            <a href="{{ url('sortie_accueil') }}" class="Link nav-link">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ url('utilisateur_gestion', { 'id' : user.id}) }}" class="Link nav-link">Mon profil</a>
                        </li>
                       <li class="nav-item">
                            <a href="{{ path('logout') }}" class="Link nav-link">DÃ©connexion</a>
                        </li>
                        {% endblock %}
                    </ul>
                </div>
            </div>
        </nav>
   <div class="Page container">
