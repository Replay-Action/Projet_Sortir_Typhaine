    </nav>{% endblock %}

    <header> {% block header %} {% endblock%}  </header>


    <div class="Page_Contents">
        <main class="Page_Main">
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block main %}
            {% endblock %}
        </main>
    </div>
    <footer class="Footer Page_Footer"> {% block footer %}
        <p class="Copyrights">
            &copy; Sortir date("Y")
        </p>
        <p>
            By Rouat Typhaine, Le Mauff Jianying, Soyeux Timothee, Robert Pascal.   [<a href="https://github.com/typhaineRouat/projet-sortir-groupe-6.git">CC BY-SA 3.0</a>],
        </p>
        {% endblock %}
    </footer>

</div>
</body>
</html>
