    <link rel="icon" href="{{ asset('images/abeille.png') }}">

    <link rel="stylesheet" href="{{ asset('style.css') }}">
    {% block stylesheets %}
        {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}

    {% block javascripts %}
        {#{{ encore_entry_script_tags('app') }}#}
    {% endblock %}
</head>
<body>
<div class="Page container">
    {% block nav %}<nav  class="Navbar Page_Nav">
        <h1 class="Title Navbar_Title">
            <a href="" class="Link Title_Link Navbar_Link">
                <img src="" alt="groupe_6_logo" class="Logo Title_Logo">

            </a>
        </h1>
